{% extends 'base.html.twig' %}

{% block title %}Course List{% endblock %}

{% block body %}

	<div class="container mt-5"></br>
</br>

<div class="jumbotron" style="background-image: url(https://via.placeholder.com/760x350)">
	<h1 class="display-3">Welcome on Category X!</h1>
	<p class="lead text-warning">All things you want to know about Categoriy X are here.</p>

</div>
<section id="aboutus" class="text-center">
    <h2 id="aboutus" class="mb-5 font-weight-bold">
        All our courses ?
    </h2>
    <hr class="separator">

<div
	class="row">
    {% for course in courses %}

	<!--Grid column-->
	<div
		class="col-lg-4 col-md-12 mt-4">

		<!--Card-->
		<div
			class="card">

			<!--Card image-->
			<div class="view overlay">
				<img src="https://via.placeholder.com/350x150" class="card-img-top" alt="">
				<a href="#">
					<div class="mask rgba-white-slight"></div>
				</a>
			</div>

			<!--Card content-->
			<div
				class="card-body">
				<!--Title-->
				<h4 class="card-title">{{ course.title }}
				</h4>
				<!--Text-->
				<p class="card-text">{{course.content | slice(0, 50)| raw }}
				</p>
				<a href="#!" class="btn btn-grey">More Details</a>
			</div>

		</div>
		<!--/.Card-->

	</div>



    {% endfor %}
</div>
</section>

</div>{% endblock %}
